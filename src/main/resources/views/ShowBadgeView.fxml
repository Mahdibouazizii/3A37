<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ecorayen.controllers.ShowBadgeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="nameLabel">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label fx:id="descriptionLabel" wrapText="true" />
        <ImageView fx:id="badgeImageView" fitHeight="150.0" fitWidth="150.0" preserveRatio="true" smooth="true" />
    </children>
</VBox>