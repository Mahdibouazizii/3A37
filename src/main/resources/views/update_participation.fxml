<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ecorayen.controllers.UpdateParticipationController" stylesheets="@../styles/universal-styles.css">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <Label style="-fx-font-weight: bold;" text="Update Participation" />
    <GridPane hgap="10.0" vgap="10.0">
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="idTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Challenge:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="challengeComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Score:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="scoreTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Submission Details:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextArea fx:id="submissionDetailsTextArea" prefHeight="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </GridPane>
    <Button onAction="#handleUpdateParticipation" text="Update Participation" />
</VBox>