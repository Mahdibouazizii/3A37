<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ecorayen.controllers.ShowPostController"
      stylesheets="@../styles/universal-styles.css"
      style="-fx-background-color: #F7F7F7;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox style="-fx-background-color: #2A2D33; -fx-padding: 10 20; -fx-alignment: center-left;">
        <Label text="Posts" style="-fx-text-fill: #F5F5DC; -fx-font-size: 16px; -fx-font-weight: bold;"/>
    </HBox>

    <VBox styleClass="card"
          style="-fx-background-color: #1A1D23; -fx-background-radius: 12 12 0 0; -fx-border-radius: 12 12 0 0; -fx-margin-bottom: 20;">
        <padding>
            <Insets bottom="10.0" left="25.0" right="25.0" top="20.0"/>
        </padding>
        <Text fx:id="postTitleLabel"
              styleClass="label-header"
              text="Post Details"
              style="-fx-fill: #CCCCCC; -fx-font-size: 18px; -fx-font-weight: bold;"/>
    </VBox>

    <VBox styleClass="challenge-card"
          style="-fx-background-color: #1A1D23; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #33383D; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 8, 0.1, 0, 2);">
        <VBox styleClass="challenge-card-content"
              style="-fx-background-color: #1A1D23; -fx-background-radius: 10; -fx-padding: 15; -fx-text-fill: #CCCCCC; -fx-border-radius: 10; -fx-border-color: #33383D; -fx-spacing: 10;">
            <Label fx:id="captionLabel"
                   style="-fx-fill: #CCCCCC; -fx-font-size: 16px; -fx-font-weight: bold;"
                   wrapText="true"/>
            <ImageView fx:id="postImageView"
                       fitWidth="300"
                       fitHeight="300"
                       preserveRatio="true"/>
            <Label fx:id="locationLabel" style="-fx-fill: #CCCCCC; -fx-font-size: 14px;"/>
            <Label fx:id="likeCountLabel" style="-fx-fill: #CCCCCC; -fx-font-size: 14px;"/>
            <Label fx:id="createdAtLabel" style="-fx-fill: #CCCCCC; -fx-font-size: 12px; -fx-font-style: italic;"/>
            <Label fx:id="updatedAtLabel" style="-fx-fill: #CCCCCC; -fx-font-size: 12px; -fx-font-style: italic;"/>
        </VBox>
    </VBox>

</VBox>