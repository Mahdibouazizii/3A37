{% extends "back.html.twig" %}

{% block title %}Events{% endblock %}

{% block body %}
    <h1>Events</h1>
    <div class="container">
        <div class="event-grid">
            {% for event in events %}
                <div class="card">
                    {% if event.image %}
                        <img src="/uploads/images/{{ event.image }}" alt="Event Image">
                    {% else %}
                        <p>No image</p>
                    {% endif %}
                    <h2>{{ event.nom }}</h2>
                    <p>{{ event.description }}</p>
                    <div class="date-container">
                        <div class="date-box">
                            <strong>Heure début</strong><br>
                            {{ event.heurDebut ? event.heurDebut|date('d/m/Y H:i') : 'N/A' }}
                        </div>
                        <div class="date-box">
                            <strong>Heure fin</strong><br>
                            {{ event.heurFin ? event.heurFin|date('d/m/Y H:i') : 'N/A' }}
                        </div>
                    </div>
                    <div class="actions">
                        <a class="btn" href="{{ path('app_event_show_back', {'id': event.id}) }}">Voir</a>
                        <a class="btn btn-edit" href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>
                    </div>
                </div>
            {% else %}
                <p>Aucun événement trouvé</p>
            {% endfor %}
        </div>
    </div>

    <div class="create-button-container">
        <a href="{{ path('app_event_new') }}" class="create-button">Créer un nouvel événement</a>
    </div>

    <style>
        body {
            background-color: #f0f8ff;
            background-image: url("{{ asset('images/background1.webp') }}");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            color: #333;
            padding: 50px;
            font-family: 'Poppins', Arial, sans-serif;
        }

        h1 {
            color: #2c3e50;
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5rem;
        }

        .container {
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            max-width: 900px;
            margin: 0 auto;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .event-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-between;
        }

        .card {
            background: #ffffff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.2s ease-in-out;
            flex: 1 1 calc(33.333% - 20px);
            max-width: calc(33.333% - 20px);
            box-sizing: border-box;
        }

        .card:hover {
            transform: scale(1.02);
        }

        .card img {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            border-radius: 8px;
        }

        .card h2 {
            color: #2c3e50;
            font-size: 1.5rem;
            margin: 10px 0;
        }

        .card p {
            font-size: 14px;
            color: #555;
        }

        .date-container {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }

        .date-box {
            width: 48%;
            text-align: center;
            padding: 10px;
            background: #ecf0f1;
            border-radius: 5px;
        }

        .actions {
            margin-top: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 15px;
            background: #2980b9;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            margin-right: 5px;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background: #1c6ea4;
        }

        .btn-edit {
            background: #f39c12;
        }

        .btn-edit:hover {
            background: #e67e22;
        }

        .create-button-container {
            text-align: center;
            margin-top: 30px;
        }

        .create-button {
            display: inline-block;
            padding: 10px;
            background: #2ecc71;
            color: white;
            border-radius: 5px;
            width: 200px;
            font-size: 1.2rem;
            transition: background 0.3s ease;
            text-decoration: none;
        }

        .create-button:hover {
            background: #27ae60;
        }

        @media screen and (max-width: 768px) {
            .card {
                flex: 1 1 calc(50% - 20px);
            }
        }

        @media screen and (max-width: 480px) {
            .card {
                flex: 1 1 100%;
            }
        }
    </style>
{% endblock %}