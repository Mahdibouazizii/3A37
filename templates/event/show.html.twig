{% extends "base.html.twig" %}

{% block title %}Événement - {{ event.nom }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg mb-4">
                <div class="row g-0 flex-wrap">
                    <div class="col-md-5 col-12 mb-3 mb-md-0">
                        {% if event.image %}
                            <img src="{{ asset('uploads/images/' ~ event.image) }}" class="card-img" alt="{{ event.nom }}" style="object-fit: cover; height: 100%; width: 100%; border-radius: 8px;">
                        {% else %}
                            <img src="{{ asset('images/default_event.jpg') }}" class="card-img" alt="Default Event Image" style="object-fit: cover; height: 100%; width: 100%; border-radius: 8px;">
                        {% endif %}
                    </div>
                    <div class="col-md-7 col-12">
                        <div class="card-body">
                            <h2 class="card-title" style="color: #FFB200;">{{ event.nom }}</h2>

                            <p class="card-text"><strong>Description:</strong> {{ event.description }}</p>
                            <p class="card-text"><strong>Heure début:</strong> {{ event.heurDebut ? event.heurDebut|date('d/m/Y H:i') : 'N/A' }}</p>
                            <p class="card-text"><strong>Heure fin:</strong> {{ event.heurFin ? event.heurFin|date('d/m/Y H:i') : 'N/A' }}</p>
                            <p class="card-text"><strong>Places disponibles:</strong> {{ event.nbrplacetottale }}</p>

                            <div class="d-flex justify-content-center mt-3">
                                <a href="{{ qrCode }}" download="qrcode_event_{{ event.id }}.png" class="btn btn-primary">
                                    Télécharger le QR Code
                                </a>
                            </div>
                            <div class="d-flex justify-content-center mt-3">
                                <a href="{{ path('app_event_index_front') }}" class="btn btn-warning btn-lg d-flex align-items-center">
                                    Retour à la liste
                                </a>
                            </div>
                        </div>
                    </div>
                </div> <!-- row -->
            </div> <!-- card -->
        </div>
    </div>
</div>

<style>
    .btn-warning {
        background-color: #FFB200;
        border: none;
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        border-radius: 50px;
    }

    .btn-warning:hover {
        background-color: #FFA500;
    }

    .btn-warning:focus {
        box-shadow: 0 0 0 0.25rem rgba(255, 82, 0, 0.5);
    }

    .btn-primary {
        background-color: #2c3e50;
        border: none;
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        border-radius: 50px;
    }

    .btn-primary:hover {
        background-color: #1c6ea4;
    }

    .card-body {
        background: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
        text-align: left;
    }

    .card-title {
        margin: 10px 0;
        color: #2c3e50;
        font-size: 1.8rem;
    }

    .card-text {
        font-size: 1rem;
        color: #333;
    }

    @media (max-width: 768px) {
        .card-body {
            padding: 20px;
            text-align: center;
        }

        .card-title {
            font-size: 1.5rem;
        }

        .card-text {
            font-size: 0.95rem;
        }

        .btn-primary,
        .btn-warning {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
        }
    }
</style>
{% endblock %}
