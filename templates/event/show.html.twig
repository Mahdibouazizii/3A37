{% extends "baseextend.html.twig" %}
{% block title %}{% endblock %}

{% block body %}

    <h1>Événements</h1>

    <div class="container">
        <div class="image-container">
            {% if event.image %}
                <img src="/uploads/images/{{ event.image }}" alt="Event Image">
            {% else %}
                <p>No image available</p>
            {% endif %}
        </div>

        <div class="event-details">
            <h2>{{ event.nom }}</h2>
            <p>{{ event.description }}</p>

            <div class="date-container">
                <div class="date-box">
                    <strong>Heure début</strong><br>
                    {{ event.heurDebut ? event.heurDebut|date('Y-m-d H:i:s') : 'N/A' }}
                </div>
                <div class="date-box">
                    <strong>Heure fin</strong><br>
                    {{ event.heurFin ? event.heurFin|date('Y-m-d H:i:s') : 'N/A' }}
                </div>
            </div>
        </div>
    </div>

    <div class="actions">
        <a href="{{ path('app_event_index_front') }}">Back to list</a>
        <a href="{{ qrCode }}" download="qrcode_event_{{ event.id }}.png" class="btn btn-primary">
            Télécharger le QR Code
        </a>

    </div>

    <style>
    body {
        background-color: #f0f8ff;
        background-image: url("{{ asset('images/background1.webp') }}");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        color: #333;
        padding: 50px;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 30px;
    }

    .container {
        background: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .image-container img {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
    }

    .event-details {
        background: white;
        padding: 20px;
        border-radius: 10px;
        text-align: left;
    }

    .event-details h2 {
        margin: 10px 0;
        color: #2c3e50;
        text-align: center;
    }

    .date-container {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
    }

    .date-box {
        padding: 10px;
        border-radius: 5px;
        width: 48%;
        text-align: center;
        background: #f9f9f9;
        color: #333;
        border: 1px solid #ddd;
    }

    .actions {
        text-align: center;
        margin-top: 20px;
    }

    a {
        color: white;
        text-decoration: none;
        display: inline-block;
        padding: 10px 15px;
        background: #2c3e50;
        border-radius: 5px;
        margin: 5px;
        transition: background 0.3s;
    }

    a:hover {
        background: #1c6ea4;
    }

    @media (max-width: 600px) {
        .date-container {
            flex-direction: column;
        }
        .date-box {
            width: 100%;
            margin-bottom: 10px;
        }
    }
</style>
{% endblock %}