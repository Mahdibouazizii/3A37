{% extends "backextend.html.twig" %}


{% block title %}Modifier l'Événement{% endblock %}

{% block body %}
    
    <h1>Modifier l'Événement</h1>

    <div class="container">
        {{ include('event/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        {{ include('event/_delete_form.html.twig') }}
               
        <a class="btn btn-back" href="{{ path('app_event_index_back') }}">⬅ Retour</a>
    </div>

    <style>
        body {
            background-color: #f0f8ff; 
            background-image: url("{{ asset('images/background1.webp') }}"); 
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            color: #333;
            padding: 50px;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #2c3e50;
            text-align: center;
        }

        .container {
            background: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            max-width: 600px;
            margin: 0 auto;
        }

        .btn-back {
            background-color: #2980b9;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: 20px;
        }

        .btn-back:hover {
            background-color: #1f6690;
        }

        .btn-update {
            background-color: orange;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: 20px;
        }

        .btn-update:hover {
            background-color: darkorange;
        }

        .btn-delete {
            background-color: red;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: 20px;
        }

        .btn-delete:hover {
            background-color: darkred;
        }
    </style>
{% endblock %}
