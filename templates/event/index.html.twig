{% extends "baseextend.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
    <h1>Événements</h1>
    <div class="container">
        <div class="event-list">
            {% for event in events %}
                <div class="card">
                    {% if event.image %}
                        <img src="/uploads/images/{{ event.image }}" alt="Event Image">
                    {% else %}
                        <p class="no-image">Aucune image disponible</p>
                    {% endif %}
                    <div class="card-content">
                        <h2>{{ event.nom }}</h2>
                        <p>{{ event.description }}</p>
                        <div class="date-container">
                            <div class="date-box">
                                <strong>Début :</strong><br>
                                {{ event.heurDebut ? event.heurDebut|date('d/m/Y H:i') : 'N/A' }}
                            </div>
                            <div class="date-box">
                                <strong>Fin :</strong><br>
                                {{ event.heurFin ? event.heurFin|date('d/m/Y H:i') : 'N/A' }}
                            </div>
                        </div>
                        <div class="actions">
                            <a class="btn" href="{{ path('app_event_show', {'id': event.id}) }}">Voir plus</a>
                            <a class="btn" href="{{ path('app_participation_new_front') }}">Participer</a>

                        </div>
                    </div>
                </div>
            {% else %}
                <p class="no-events">Aucun événement trouvé</p>
            {% endfor %}
        </div>
    </div>

<style>
    body {
        background-color: #f4f7f9;
        background-image: url("{{ asset('images/background1.webp') }}");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        color: #333;
        padding: 50px;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 30px;
    }

    .container {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        max-width: 1000px;
        margin: 0 auto;
    }

    .event-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .card {
        background: white;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        text-align: center;
        width: 300px;
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card img {
        width: 100%;
        max-height: 200px;
        object-fit: cover;
        border-radius: 5px;
    }

    .no-image {
        color: #888;
        font-style: italic;
        padding: 20px;
    }

    .card-content {
        padding: 10px;
    }

    .card h2 {
        color: #2c3e50;
        font-size: 20px;
        margin: 10px 0;
    }

    .card p {
        font-size: 14px;
        color: #555;
        margin-bottom: 15px;
    }

    .date-container {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
    }

    .date-box {
        width: 48%;
        text-align: center;
        padding: 10px;
        background: #ecf0f1;
        border-radius: 5px;
        font-size: 14px;
    }

    .actions {
        margin-top: 15px;
    }

    .btn {
        display: inline-block;
        padding: 10px 15px;
        background: #2980b9;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.3s;
    }

    .btn:hover {
        background: #1c6ea4;
    }

    .no-events {
        text-align: center;
        font-size: 18px;
        color: #666;
        margin-top: 20px;
    }
</style>
{% endblock %}
