{% extends 'base.html.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block content %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="row w-100">
        <div class="col-md-6 col-lg-4 mx-auto">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h2 class="text-center mb-4">Forgot Password?</h2>

                    <p class="text-center">Enter your email address and we will send you a reset code.</p>

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger text-center">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary w-100">Send Reset Code</button>
                        </div>
                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <a href="{{ path('app_login') }}" class="text-decoration-none">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
