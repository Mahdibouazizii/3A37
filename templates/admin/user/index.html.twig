{% extends 'admin/base.html.twig' %}

{% block title %}Users Management{% endblock %}

{% block content %}
<div class="container">
    <h2 class="my-4 d-flex justify-content-between align-items-center">
        Users Management
        <a href="{{ path('user_new') }}" class="btn btn-success">+ Add New User</a>
    </h2>

    <div class="row">
        {% for user in users %}
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-body text-center">
                        {# ✅ Handle Profile Picture Display Properly #}
                        <img src="{{ user.profilePicture ? asset('uploads/profile_pictures/' ~ user.profilePicture) : asset('assets/images/default-avatar.png') }}" 
                             class="rounded-circle mb-3 img-fluid" 
                             style="width: 100px; height: 100px; object-fit: cover;" 
                             alt="Profile Picture">

                        <h5 class="card-title">{{ user.email }}</h5>
                        <p class="text-muted">User ID: {{ user.id }}</p>
                        <p class="text-muted">
                            Status: 
                            {% if user.isBanned %}
                                <span class="text-danger fw-bold">Banned</span>
                            {% else %}
                                <span class="text-success fw-bold">Active</span>
                            {% endif %}
                        </p>

                        <div class="d-flex justify-content-center">
                            {# ✅ Edit User Button #}
                            <a href="{{ path('user_edit', { id: user.id }) }}" class="btn btn-warning btn-sm me-2">Edit</a>

                            {# ✅ Ban/Unban User Form #}
                            <form method="post" action="{{ path('user_toggle_ban', { id: user.id }) }}" class="me-2">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle_ban' ~ user.id) }}">
                                {% if user.isBanned %}
                                    <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Are you sure you want to unban this user?')">
                                        Unban
                                    </button>
                                {% else %}
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to ban this user?')">
                                        Ban
                                    </button>
                                {% endif %}
                            </form>

                            {# ✅ Delete User Button #}
                            <form method="post" action="{{ path('app_user_delete', { id: user.id }) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button type="submit" class="btn btn-dark btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">
                                    Delete
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center">No users found.</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
