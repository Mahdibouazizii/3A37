{% extends 'admin/base.html.twig' %}

{% block title %}Badge Index{% endblock %}

{% block content %}
    <div class="container">
        <h2 class="my-4 d-flex justify-content-between align-items-center">
            Gestion des Badges
            <a href="{{ path('app_badge_new') }}" class="btn btn-success">+ Cr√©er un Nouveau Badge</a>
        </h2>

        <div class="form-group mb-4">
            <input type="text" id="searchInput" class="form-control" placeholder="Search badges...">
        </div>

        <table class="table table-striped" id="badgeTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Challenge-Name</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for badge in badges %}
                    <tr>
                        <td>{{ badge.id }}</td>
                        <td>{{ badge.challenge ? badge.challenge.name : 'N/A' }}</td>
                        <td>{{ badge.name }}</td>
                        <td>{{ badge.description }}</td>
                        <td>
                            {% if badge.imagePath %}
                                <img src="{{ asset(badge.imagePath) }}" alt="{{ badge.name }}" width="50">
                            {% else %}
                                No Image
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_badge_show', {'id': badge.id}) }}" class="btn btn-sm btn-info">Show</a>
                            <a href="{{ path('app_badge_edit', {'id': badge.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                            <form method="post" action="{{ path('app_badge_delete', {'id': badge.id}) }}" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ badge.id) }}">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const table = document.getElementById('badgeTable');
            const tableRows = table.querySelectorAll('tbody tr');

            searchInput.addEventListener('keyup', function() {
                const searchTerm = searchInput.value.toLowerCase();

                tableRows.forEach(row => {
                    const rowData = row.textContent.toLowerCase();
                    if (rowData.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>

    <style>
        /* Layout and Design */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }

        h2 {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        #badgeTable {
            width: 100%;
            margin-top: 20px;
        }

        #badgeTable th, #badgeTable td {
            padding: 10px;
            text-align: center;
        }

        #badgeTable th {
            background-color: #007bff;
            color: white;
        }

        .btn {
            padding: 8px 12px;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

        .btn:hover {
            opacity: 0.8;
        }

        .btn-info {
            background-color: #17a2b8;
            color: white;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        #badgeTable tr:hover {
            background-color: #f1f1f1;
        }

        .mt-3 {
            margin-top: 20px;
        }
    </style>
{% endblock %}
