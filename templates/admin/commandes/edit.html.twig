{% extends 'admin/base.html.twig' %}

{% block title %}Modifier Commande #{{ commande.id }}{% endblock %}

{% block content %}
<div class="page-header">
    <h3 class="page-title">Modifier la Commande</h3>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Modifier le Statut de la Commande #{{ commande.id }}</h4>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.status) }}
                {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a href="{{ path('admin_commande_details', { 'id': commande.id }) }}" class="btn btn-secondary">Annuler</a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}