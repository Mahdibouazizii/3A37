{% extends "back.html.twig" %}

{% block title %}  {% endblock %}

{% block body %}
    <h1></h1>

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Age</th>
                    <th>Nbrplace</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for participation in participations %}
                <tr>
                    <td>{{ participation.age }}</td>
                    <td>{{ participation.nbrplace }}</td>
                    <td>{{ participation.statut }}</td>
                    <td>
                        <a class="btn" href="{{ path('app_participation_show_back', {'id': participation.id}) }}">Voir</a>
                        <a class="btn btn-edit" href="{{ path('app_participation_edit', {'id': participation.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune participation trouv√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
           



    </div>

<style>
    body {
        background-color: #f0f8ff;
        background-image: url("{{ asset('images/background1.webp') }}");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        color: #333;
        font-family: 'Helvetica Neue', Arial, sans-serif;
        padding: 20px;
        margin: 0;
    }

    h1 {
        color: #2c3e50;
        text-align: center;
        font-size: 36px; /* Increased font size for better visibility */
        margin-bottom: 30px; /* Increased margin for spacing */
    }

    .container {
        background: rgba(255, 255, 255, 0.95);
        padding: 40px; /* More padding for a spacious look */
        border-radius: 10px;
        max-width: 800px; /* Set a max width for better layout */
        margin: 0 auto; /* Center the container */
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 18px;
    }

    .table th, .table td {
        padding: 15px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .table th {
        background-color: #2980b9;
        color: white;
        font-size: 20px;
        text-transform: uppercase; /* Added text transformation for headers */
    }

    .table td {
        background-color: #ecf0f1;
        font-size: 16px; /* Slightly reduced font size for better balance */
    }

    .btn {
        display: inline-block;
        padding: 10px 20px; /* Increased padding for better touch targets */
        background: #2980b9;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        margin-right: 10px; /* More space between buttons */
        transition: background 0.3s ease; /* Smooth transition effect */
    }

    .btn:hover {
        background: #1c6ea4;
    }

    .btn-edit {
        background: #f39c12;
    }

    .btn-edit:hover {
        background: #e67e22;
    }

    .create-button {
        display: block;
        text-align: center;
        margin-top: 30px; /* Increased margin for better spacing */
        padding: 15px; /* More padding for a better button size */
        background: #2ecc71;
        color: white;
        border-radius: 5px;
        font-size: 18px;
        width: 250px; /* Increased width for a more prominent button */
        margin-left: auto;
        margin-right: auto;
        transition: background 0.3s ease; /* Smooth transition for hover effect */
    }

    .create-button:hover {
        background: #27ae60;
    }
</style>
{% endblock %}