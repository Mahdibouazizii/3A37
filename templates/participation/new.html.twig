{% extends "baseextend.html.twig" %}

{% block title %}Créer une Participation{% endblock %}

{% block body %}
    <div class="participation-container">
        <h1>Créer une nouvelle Participation</h1>
        
        <div class="form-container">
            {{ include('participation/_form.html.twig') }}
        </div>

        <a href="{{ path('app_participation_index_back') }}" class="back-link">
            ⬅ Retour à la liste
        </a>
    </div>

<style>
    body {
        background: linear-gradient(to right, #eef2f3, #cfd9df);
        background-image: url("{{ asset('images/background1.webp') }}");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Poppins', Arial, sans-serif;
        padding: 20px;
        color: #1f2e44;
    }

    .participation-container {
        text-align: center;
        width: 100%;
        max-width: 550px;
        background: rgba(255, 255, 255, 0.85);
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
    }

    h1 {
        font-size: 2rem;
        margin-bottom: 20px;
        color: #1f2e44;
    }

    .form-container {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 15px;
        font-size: 1rem;
        font-weight: 600;
        color: #007acc;
        background: #eaf4fc;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease-in-out;
    }

    .back-link:hover {
        background: #007acc;
        color: white;
        text-decoration: none;
    }

    @media (max-width: 768px) {
        .participation-container {
            padding: 20px;
            width: 90%;
        }

        h1 {
            font-size: 1.5rem;
        }
    }

    @media (max-width: 480px) {
        h1 {
            font-size: 1.3rem;
        }

        .back-link {
            font-size: 0.9rem;
            padding: 8px 12px;
        }
    }
</style>

{% endblock %}
