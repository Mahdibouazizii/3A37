{% extends "baseextend.html.twig" %}

    {% block title %}{% endblock %}

    {% block body %}
        <h1> Participation</h1>

        <div class="container">
            <div class="event-details">
                

                <div class="detail-item">
                    <strong>Age</strong><br>
                    <p>{{ participation.age }}</p>
                </div>

                <div class="detail-item">
                    <strong>Nombre de places  </strong><br>
                    <p>{{ participation.nbrplace }}</p>
                </div>

                <div class="detail-item">
                    <strong>Statut</strong><br>
                    <p>{{ participation.statut }}</p>
                </div>
            </div>
        </div>

        <div class="actions">
            <a href="{{ path('app_participation_index') }}">Back to list</a>
        </div>

    <style>
        body {
            background-color: #f0f8ff; 
            background-image: url("{{ asset('images/background1.webp') }}"); 
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            color: #333;
            padding: 50px;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #2c3e50;
            text-align: center;
        }

        .container {
            background: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            max-width: 600px;
            margin: 0 auto;
        }

        .event-details {
            background: white;
            padding: 20px;
            border-radius: 10px;
        }

        .event-details h2 {
            margin: 10px 0;
            color: #2c3e50;
            text-align: center; /* Centrer le texte du nom */
        }

        .detail-item {
            margin: 15px 0;
            font-size: 16px;
        }

        .actions {
            text-align: center;
            margin-top: 20px;
        }

        a {
            color: white;
            text-decoration: none;
            display: inline-block;
            padding: 10px 15px;
            background: #2c3e50;
            border-radius: 5px;
            margin: 5px;
        }

        a:hover {
            background: #1c6ea4;
        }
    </style>
    {% endblock %}
