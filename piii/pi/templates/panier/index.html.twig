{% block title %}My Symfony App{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
            color: #333;
        }
        .navbar {
            background-color: #1d3557;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: white;
            position: fixed;
            top: 0;
            width: 100%;
            height: 60px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
        .navbar .logo {
            font-size: 26px;
            font-weight: bold;
        }
        .navbar .search-bar input {
            padding: 8px;
            border-radius: 20px;
            border: none;
            width: 280px;
            outline: none;
        }
        .container {
            display: flex;
            margin-top: 80px;
        }
        .sidebar {
            width: 250px;
            background-color: #fff;
            padding: 20px;
            height: 100vh;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }
        .sidebar a {
            display: block;
            padding: 12px;
            color: #1d3557;
            text-decoration: none;
            font-weight: 500;
            border-radius: 5px;
            transition: background 0.3s;
        }
        .sidebar a:hover {
            background-color: #a8dadc;
        }
        .content {
            flex-grow: 1;
            padding: 25px;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            margin: 20px;
        }
        .table-container {
            width: 80%;
            margin: auto;
        }
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: white;
            border-radius: 10px;
            overflow: hidden;
        }
        .table th, .table td {
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }
        .table th {
            background-color: #1d3557;
            color: white;
            text-transform: uppercase;
        }
        .table tr:hover {
            background-color: #f1f1f1;
        }
        .toggle-button {
            background-color: #1d3557;
            color: white;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            border: none;
            font-weight: bold;
            transition: background 0.3s;
        }
        .toggle-button:hover {
            background-color: #457b9d;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="navbar">
        <div class="logo">MyApp</div>
        <div class="search-bar">
            <input type="text" placeholder="Search...">
        </div>
        <div>
            <button class="toggle-button" id="toggleModeButton">Switch to Admin Mode</button>
        </div>
    </div>
    <div class="container">
        <div class="sidebar">
            <a href="#"><i class="fa fa-home"></i> Home</a>
            <a href="#"><i class="fa fa-user"></i> Profile</a>
            <a href="#"><i class="fa fa-bell"></i> Notifications</a>
            <a href="#"><i class="fa fa-cog"></i> Settings</a>
        </div>
        <div class="content">
            {% block content %}
                <h1>Panier index</h1>
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Total</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for panier in paniers %}
                            <tr>
                                <td>{{ panier.id }}</td>
                                <td>{{ panier.total }}</td>
                                <td>{{ panier.datecreation ? panier.datecreation|date('Y-m-d') : '' }}</td>
                                <td>{{ panier.statut }}</td>
                                <td class="actions">
                                    <a href="{{ path('app_panier_show', {'id': panier.id}) }}">Show</a>
                                    <a href="{{ path('app_panier_edit', {'id': panier.id}) }}" class="admin-action">Edit</a>
                                    <a href="{{ path('app_panier_delete', {'id': panier.id}) }}" class="admin-action">Delete</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">No records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="{{ path('app_panier_new') }}" class="admin-action">Create new</a>
            {% endblock %}
        </div>
    </div>

    <script>
        let isAdminMode = false;
        const toggleButton = document.getElementById('toggleModeButton');
        const adminActions = document.querySelectorAll('.admin-action');

        toggleButton.addEventListener('click', () => {
            isAdminMode = !isAdminMode;
            toggleButton.textContent = isAdminMode ? 'Switch to User Mode' : 'Switch to Admin Mode';
            adminActions.forEach(action => {
                action.style.display = isAdminMode ? 'inline' : 'none';
            });
        });
    </script>
{% endblock %}
