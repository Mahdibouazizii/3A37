{% endblock %}

{% block styles %}
    <style>
        /* General reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px; /* Add padding to avoid content sticking to the edges */
        }

        /* Single container for the form */
        .form-container {
            max-width: 700px; /* Wider container */
            width: 100%;
            padding: 30px; /* More padding for a cleaner look */
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        /* Title styling */
        .page-title {
            color: #333;
            text-align: center;
            margin-bottom: 30px; /* Increased margin for better spacing */
            font-size: 2em; /* Increased font size for more emphasis */
            font-weight: bold;
        }

        /* Styling for form inputs and widgets */
        .form-container input,
        .form-container select,
        .form-container textarea {
            width: 100%;
            padding: 14px;
            margin-bottom: 20px; /* Increased margin for better spacing between inputs */
            border: 2px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
            background-color: #f9f9f9;
            transition: border-color 0.3s ease;
        }

        .form-container input:focus,
        .form-container select:focus,
        .form-container textarea:focus {
            border-color: #3498db;
            outline: none;
        }

        /* Button Styling */
        .form-container button,
        .btn {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 12px 18px;
            font-size: 16px;
            border-radius: 8px;
            width: 100%;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            margin-top: 20px; /* Add top margin to give space before the button */
        }

        .form-container button:hover,
        .btn:hover {
            background-color: #2980b9;
            transform: scale(1.05);
        }

        .form-container button:active,
        .btn:active {
            background-color: #1f6f8b;
        }

        /* Custom styling for the "back to list" button */
        .btn-back {
            background-color: #95a5a6;
            color: white;
            width: auto; /* Prevent full width */
            padding: 10px 20px; /* Padding to match content */
            margin-top: 20px; /* Margin for spacing */
            text-align: center; /* Center the text */
            display: inline-block; /* Ensure button doesn't take full width */
        }

        .btn-back:hover {
            background-color: #7f8c8d;
        }

        .actions {
            text-align: center;
            margin-top: 20px; /* Add space above the actions section */
        }
    </style>
{% endblock %}
